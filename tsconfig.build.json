{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmit": false,
    "strict": true,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "rootDir": "./src",
    "baseUrl": "./",
    "declarationDir": "./dist",
    "declaration": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelCore": "@babel/core"
  },
  "include": ["src"],
  "exclude": ["node_modules", ".expo", ".expo-shared", "dist"],
  "typeRoots": ["./node_modules/@types"]
}
